{
  "name": "inventory-api",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "create-admins": "node create-admins/create-admins.js",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:ci": "jest --coverage --coverageReporters=lcov --coverageReporters=text --verbose --runInBand --reporters=default --reporters=jest-junit --forceExit"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "fast-csv": "^5.0.5",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.3.0",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testSequencer": "<rootDir>/jest.sequencer.js",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/jest.setup.js"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": true,
    "includeConsoleOutput": true
  }
}
